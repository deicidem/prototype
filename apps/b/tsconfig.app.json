{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        // "composite": true,
        // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ]
}
