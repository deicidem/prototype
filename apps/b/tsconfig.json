{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "noImplicitAny": true,
        "declaration": true, // Создавать ли соответствующие файлы ".d.ts"?
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ]
}
