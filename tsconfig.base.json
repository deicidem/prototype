{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "target": "ES2020",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "noImplicitAny": true,
        "declaration": true, // Создавать ли соответствующие файлы ".d.ts"?
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
