{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "noImplicitAny": true,
        "declaration": true, // Создавать ли соответствующие файлы ".d.ts"?
        "outDir": "lib",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/*",
        "src/**/*.vue",
        "src/*.vue"
    ]
}
